<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>


<section>
  <% if (user) { %>
    <h1 id="head"><%= user ? user.profile.name : "Reader" %>'s Books</h1>
    <table class="bold-table">
      <thead>
          <tr>
            <th>üìï Title: </th>
              <th>‚úçÔ∏è Author(s): </th>
              <th> Genre: </th>
              <th> Info: </th>
              
          </tr>
      </thead>
      <tbody>
    
      <% books.forEach(book => { %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.authors %></td>
            <td><%= book.genre %></td>
            <td><a href="/books/<%= book._id %>">‚ÑπÔ∏è</a></td>  
          </tr>
          <% }) %>
      </tbody>
  </table>
  
   <div class="items">
    <h2>Add a Book!</h2>
    <form action="/books" method="POST">
      <label>
        Title: 
        <input type="text" name="title" autocomplete="off">
      </label>
      <label>
        Author(s): 
        <input type="text" name="author" autocomplete="off">
      </label>
      <label>
        Genre: 
        <input type="text" name="genre" autocomplete="off">
      </label>
      <label>
        Read?
        <input type="checkbox" name="read">
      </label>
      <button type="submit">Add book</button>
    </form>
  </div>

    <h3>Need a book ? Use the book search to find your favorite book</h3>
    <form class="" action="/books/search" method="POST">
      <input  name="search" type="text" placeholder="Book Search" aria-label="Search">
      <button class="" type="submit">Search</button>
    </form>
  <% } else {%> 
 
    <h2>Please login to see your Books !</h2>
    <% } %>
 
</section>




