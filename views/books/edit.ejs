<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>




  <h1>Edit "<%= book.title %>" Book </h1>
  <ul>
    <td>📕 Title: </td>
      <td class="title"><%= book.title %></td>
      <td>✍️ Author: </td>
      <td><%= book.author %></td>
      <td> Genre: </td>
      <td><%= book.genre %></td>
      <td>📕 Status</td>
    <td>This book is <%= book.read ? 'read! 😋' : 'not read yet! 😫' %>
    </td>
  </ul>
  
    <form action="/books/<%= book._id %>?_method=PUT" method="POST">
      <label>
        Title: 
        <input type="text" name="title" autocomplete="off">
      </label>
      <label>
        Author: 
        <input type="text" name="author" autocomplete="off">
      </label>
      <label>
        Genre: 
        <input type="text" name="genre" autocomplete="off">
      </label>
      <label>
        Read?
        <input type="checkbox" name="read">
        <%= book.read ? "checked" : "" %> 
    </label>
    <button type="submit">Edit the Book</button>

    </form>
</section>



<%- include('../partials/footer') %>