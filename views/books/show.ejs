<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
	<p> From the Book list of <%= book.owner.name %>📚 :</p>
<table class="bold-table">
    <thead>
        <tr>
          <th>📕 Title: </th>
            <th>✍️ Author(s): </th>
            <th> Genre: </th>
            <th>📕 Status</th>
        </tr>
    </thead>
    <tbody>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.authors %></td>
          <td><%= book.genre %></td>
          <td>Read <%= book.read ? 'Yes 😋' : 'No! 😫' %></td>
        </tr>
    </tbody>
</table>

  <tr>
  <div class="items">
    <% if (user) { %>
      <td>
      <form 
        action="/books/<%= book._id %>/flip-read?_method=PATCH" 
        method="POST">
        <button class="btn btn-secondary btn-lg" type="submit">
          Read: <%= book.read ? 'No📕🥺' : 'Yes 📖 🎉' %>
        </button> 
      </form>
    </td>
    <% } %>
    
    
    <% if (book.owner.equals(user?.profile._id)) { %>
      <form action="/books/<%= book._id %>/edit" method="GET">
        <button class="btn btn-warning btn-lg" type="submit">Edit this Book 🚧</button>
      </form>

    

    
    
      <form action="/books/<%= book._id %>?_method=DELETE" method="POST">
        <button class="btn btn-danger btn-lg" type="submit">Delete this book ⛔️</button>
      </form>

    
      
        <form action="/books/<%= book._id %>/review" method="GET">
          <button class="btn btn-primary btn-lg" type="submit">Review this book</button>
        </form>

        
      
  
    <% } %>
  </tr>
</div>
</section>

<%- include('../partials/footer') %>