<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
	<p> From the Book list of <%= book.owner.name %>📚 :</p>
  <ul>
  <tr>
    <td>📕 Title: </td>
    <td class="title"><%= book.title %></td>
    <td>✍️ Author: </td>
    <td><%= book.author %></td>
    <td> Genre: </td>
    <td><%= book.genre %></td>
    <td>📕 Status</td>
    <td>This book is <%= book.read ? 'read! 😋' : 'not read yet! 😫' %></td>
    <% if (user) { %>
      <form 
        action="/books/<%= book._id %>/flip-read?_method=PATCH" 
        method="POST"
      >
        <button class="btn" type="submit">
          Make book <%= book.read ? 'not read 📕🥺' : 'read 📖 🎉' %>
        </button> 
        <!-- <% if (book.read) { %> 
          <form action="/books/<%= book._id %>/review" method="POST">
          <button class="btn" type="submit">Review this Book 📝</button>
        </form> <% } %> -->
      </form>

    <% } %>
    <% if (book.owner.equals(user?.profile._id)) { %>
      <form action="/books/<%= book._id %>/edit" method="GET">
        <button class="btn" type="submit">Edit this Book 🚧</button>
      </form>
      <form action="/books/<%= book._id %>?_method=DELETE" method="POST">
        <button class="btn" type="submit">Delete this book ⛔️</button>
      </form>
        <form action="/books/<%= book._id %>/review" method="GET">
          <button class="btn" type="submit">Review this book</button>
        </form>
     
    <% } %>
  </tr>
</ul>
</section>

<%- include('../partials/footer') %>